$duration: 0.5s;
$points-size: 100px;

.video-box {
	position: relative;
	width: 100%;
	margin-top: 10px;
	margin-bottom: 40px;
	max-height: 70vh;
}

.video-box:before {
	content: "";
	display: block;
	padding-top: 75%; /* initial ratio of 1:1*/
}

.video-content {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	background-color: #ccc;
}

video {
	width: 100%;
	height: 100%;
}

canvas {
	display: none;
}

button[hidden], span[hidden] {
	display: none;
}

.scan-button {
	transition: top $duration, right $duration, background-color $duration, font-size $duration;
	position: absolute;
	top: calc(100% / 2 - 75px);
	right: calc(100% / 2 - 75px);
	width: 150px;
	height: 150px;
	border-radius: 50%;
	outline: none;
	border: none;
	font-size: 30px;
}

.scan-button-active {
	top: 50px;
	right: 50px;
	background-color: #333;
	width: 100px;
	height: 100px;
	font-size: 20px;
}

.alert {
	margin-top: 26px;
	font-size: 30px;
}

.alert > div {
	margin-top: 20px;
	font-size: 20px;
}

.btn-default {
	margin-top: 0 !important;
}

@keyframes resizePoints {
	from {
		transform: scale(1);
	}

	to {
		transform: scale(1.2);
	}
}

#welcomeDialog {
	font-size: larger;

	.modal-body {
		.points {
			border-left: solid 1px #e5e5e5;

			> div {
				margin-left: auto;
				margin-right: auto;
				width: $points-size;
				margin-top: 20px;
				margin-bottom: 10px;

				> div {
					color: #fff;
					border-radius: 50%;
					background-color: #5bc0de;
					width: $points-size;
					height: $points-size;
					line-height: $points-size;
					text-align: center;
					font-size: 36px;
					font-weight: bold;
					animation-name: resizePoints;
					animation-duration: 1s;
					animation-direction: alternate;
					animation-iteration-count: 2;
				}
			}

			> p {
				font-size: small;
			}
		}
